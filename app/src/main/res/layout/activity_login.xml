<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="horizontal"
    tools:context="com.example.chen.news.activity.LoginActivity">
 <ImageView
     android:layout_marginTop="10dp"
     android:layout_weight="1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@mipmap/qqdisanfang"
     android:id="@+id/qqlogin_iv"
     />
    <ImageView
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/weibodisanfang"
        android:id="@+id/sinalogin_iv"
        />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/weixindisanfang"
        android:id="@+id/weixinlogin_iv"
        />
</LinearLayout>
